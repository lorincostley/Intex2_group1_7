@model List<Customer>

<form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birth Date</th>
                <th>Country</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td><input type="text" name="FirstName" value="@customer.FirstName" /></td>
                    <td><input type="text" name="LastName" value="@customer.LastName" /></td>
                    <td><input type="date" name="BirthDate" value="@customer.BirthDate" /></td>
                    <td><input type="text" name="Country" value="@customer.CountryOfResidence" /></td>
                    <td><input type="text" name="Gender" value="@customer.Gender" /></td>
                    <td>@string.Format("{0:0.0}", customer.Age)</td>
                    <td><input type="email" name="Email" value="@customer.CustEmail" /></td>
                 </tr>
            }
        </tbody>
    </table>
</form>
