@model Order

<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Adjust as needed for vertical centering */
    }

    .btn-delete {
        background-color: #5b64d1; /* Purple color */
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-cancel {
        background-color: #f0f0f0; /* Light gray color */
        color: #333;
        font-weight: bold;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        margin-left: 10px; /* Add some space between buttons */
    }
</style>

<div class="container">
    <h2>Confirm Deletion</h2>
    <br />
    <h3>@Model.TransactionId</h3>
    <br />
    <form method="post">
        <input type="hidden" asp-for="TransactionId" />
        <button type="submit" class="btn-delete">Delete</button>
        <a class="btn-cancel" asp-controller="Admin" asp-action="Admin_Orders">Cancel</a>
    </form>
</div>
